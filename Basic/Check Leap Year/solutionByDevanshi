import java.util.*;
class solutionByDevanshi{
    static void leapyr(int n){
        if(n%4==0){
            System.out.println("yes");
        }else 
        System.out.println("no");
    }
public static void main(String[] args){
    Scanner scn= new Scanner(System.in);
    int n = scn.nextInt();
    leapyr( n);
}

}

